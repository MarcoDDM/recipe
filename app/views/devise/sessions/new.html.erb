<section>
  <article class="flex flex-col gap-y-2 max-w-sm md:max-w-lg lg:max-w-xl mx-auto my-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-col gap-y-4" }) do |f| %>
      <h1 class="font-bold text-center text-4xl">Log in</h1>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded" %>
      </div>
    
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full rounded" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="flex justify-center">
        <%= f.submit "Log in", class:"border border-stone-950 font-bold text-md py-1 px-4 text-stone-950 mt-3 cursor-pointer" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </article>
</section>