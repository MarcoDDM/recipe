<% content_for :styles do %>
    .recipes_container {
        max-width: 500px;
        margin: auto;
        padding-left: unset;
    }

    .recipe {
        border: 2px solid black;
        padding: 2rem;
        margin-bottom: 1rem;
        list-style-type: none;
        display: flex;
        gap: 2rem;
    }
    .rname {
        font-weight: bold;
        width: 40%;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: .5rem;
    }
    a {
        color: black;
    }
    
    .auser {
        text-align: right;
        padding: 1rem;
    }
    .edit-remove {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
<% end %>


<div class='container'> 
    <div class='auser'>
        <button>
            <%= link_to "Add Recipe", new_recipe_path %>
        </button>
    </div>
    <ul class="recipes_container"> 
    <% @recipes.each do |recipe| %>
        <li class='recipe'>
            <div class='rname'>
                <%= link_to recipe.name, recipe_path(recipe)  %>  
            </div>
            <div><%= recipe.description %>  </div>
            <div class='edit-remove'>
                <button>
                    <%= link_to "Edit", edit_recipe_path(recipe) %>
                </button>

                <%= form_with url: recipe_path(recipe), method: :delete do |form| %> 
                    <%= form.submit "remove" %>
                <% end %>
            </div>
        </li>
    <% end %>
    </ul>
</div>
