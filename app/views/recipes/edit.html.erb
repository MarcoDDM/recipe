<% content_for :style do %>
  .form-control {
      padding: .5rem
  }

<% end %>


<div class='container'>
  <h1>Edit Recipe</h1>

  <%= form_with(model: @recipe, local: true) do |form| %>
  <div class="form-group">
      <%= form.label :name, "Recipe Name" %>
      <%= form.text_field :name %>
  </div>

  <div class="form-group">
      <%= form.label :preparation_time, "Preparation Time (minutes)" %>
      <%= form.number_field :preparation_time, class: "form-control" %>
  </div>

  <div class="form-group">
      <%= form.label :cooking_time, "Cooking Time (minutes)" %>
      <%= form.number_field :cooking_time, class: "form-control" %>
  </div>

  <div class="form-group">
      <%= form.label :description, "Description" %>
      <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-check">
      <%= form.label :public, "Public Recipe" %>
      <%= form.check_box :public, class: "form-check-input" %>
  </div>

  <div class="form-group">
      <%= form.submit "Update Recipe", class: "btn btn-primary" %>
  </div>
  <% end %>

  <%= link_to "Back to Recipe", recipes_path, class: "btn btn-secondary" %>
<div>
