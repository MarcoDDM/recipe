<div class='container'> 
    <h3> This is recipe adding form: </h3> 
    <%= form_with model: @recipe do |f| %>  

        <div class='field'> 
            <%= f.label :recipe_name %>
            <%= f.text_field :name %>
        </div>

        <div class='field'> 
            <%= f.label :description %>
            <%= f.text_area :description %>
        </div>

        <div class='field'> 
            <%= f.label :preparation_time %>
            <%= f.number_field :preparation_time %>
        </div>

        <div class='field'> 
            <%= f.label :cooking_time %>
            <%= f.number_field :cooking_time %>
        </div>

        <div class='field'> 
            <%= f.label :public %>
            <%= f.check_box :public %>
        </div>
        
        <%= f.submit 'Create Recipe' %>
    <% end %>
</div>